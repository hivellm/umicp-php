{
  "name": "hivellm/umicp",
  "description": "UMICP PHP Bindings - High-performance inter-model communication protocol for AI systems",
  "type": "library",
  "keywords": [
    "umicp",
    "ai",
    "communication",
    "protocol",
    "matrix",
    "embeddings",
    "federated-learning",
    "websocket",
    "ffi",
    "p2p",
    "peer-to-peer"
  ],
  "homepage": "https://github.com/hivellm/umicp",
  "license": "MIT",
  "authors": [
    {
      "name": "HiveLLM AI Collaborative Team",
      "email": "team@hivellm.org",
      "homepage": "https://hivellm.org"
    }
  ],
  "support": {
    "issues": "https://github.com/hivellm/umicp/issues",
    "source": "https://github.com/hivellm/umicp",
    "docs": "https://github.com/hivellm/umicp/tree/main/bindings/php/docs"
  },
  "require": {
    "php": ">=8.1",
    "ext-ffi": "*",
    "ext-json": "*",
    "react/event-loop": "^1.5",
    "react/promise": "^3.1",
    "react/socket": "^1.15",
    "ratchet/pawl": "^0.4",
    "evenement/evenement": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.8",
    "vimeo/psalm": "^5.18",
    "phpbench/phpbench": "^1.2"
  },
  "suggest": {
    "ext-swoole": "For high-performance async operations (alternative to ReactPHP)",
    "amphp/amp": "For modern PHP async runtime (alternative to ReactPHP)",
    "symfony/event-dispatcher": "For PSR-14 event dispatching",
    "monolog/monolog": "For comprehensive logging"
  },
  "autoload": {
    "psr-4": {
      "UMICP\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "UMICP\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=Unit",
    "test:integration": "phpunit --testsuite=Integration",
    "test:performance": "phpbench run --report=default",
    "test:coverage": "phpunit --coverage-html coverage/",
    "lint": "phpcs --standard=PSR12 src/ tests/",
    "lint:fix": "phpcbf --standard=PSR12 src/ tests/",
    "analyse": "phpstan analyse src/ tests/ --level=8",
    "analyse:psalm": "psalm --show-info=true",
    "check": [
      "@lint",
      "@analyse",
      "@test"
    ],
    "benchmark": "phpbench run --report=aggregate"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform-check": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  },
  "bin": [],
  "archive": {
    "exclude": [
      "/tests",
      "/docs",
      ".gitignore",
      ".gitattributes",
      "phpunit.xml",
      "phpstan.neon",
      "psalm.xml"
    ]
  }
}

